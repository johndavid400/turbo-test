<%= turbo_stream_from "quotes" %>

<main class="container">

  <div class="header">
    <h1>Quotes</h1>
    <div class="links">
      <%= link_to "Logout", destroy_user_session_path, class: "btn btn--primary", "data-turbo-prefetch" => "false"  %>
      <%= link_to "New quote", new_quote_path, class: "btn btn--secondary", data: { turbo_frame: dom_id(Quote.new) }, "data-turbo-prefetch" => "false"  %>
    </div>
  </div>

  <%= turbo_frame_tag Quote.new %>
  <%= turbo_frame_tag "quotes" do %>
    <%= render @quotes %>
  <% end %>
</main>
